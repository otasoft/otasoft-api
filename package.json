{
  "name": "otasoft-api",
  "version": "0.2.8",
  "description": "API Gateway for Otasoft ecosystem",
  "author": "Jakub Andrzejewski",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:dev-hmr": "nest build --webpack --webpackPath webpack-hmr.config.js",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docs": "npx compodoc --theme material --output src/doc/documentation -p tsconfig.json -s"
  },
  "dependencies": {
    "@nestjs/bull": "^0.3.1",
    "@nestjs/common": "^7.6.11",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.11",
    "@nestjs/graphql": "^7.9.8",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/microservices": "^7.6.11",
    "@nestjs/passport": "^7.1.4",
    "@nestjs/platform-express": "^7.6.11",
    "@nestjs/schedule": "^0.4.2",
    "@nestjs/swagger": "^4.7.12",
    "@nestjs/terminus": "^7.1.0",
    "amqp-connection-manager": "^3.2.0",
    "amqplib": "^0.6.0",
    "apollo-server-express": "^2.19.2",
    "bull": "^3.20.1",
    "cache-manager": "^3.4.0",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.0",
    "compression": "^1.7.4",
    "connect-redis": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "express-rate-limit": "^5.2.3",
    "express-session": "^1.17.1",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.2",
    "helmet": "^4.4.1",
    "module-alias": "^2.2.2",
    "openid-client": "^4.4.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.11",
    "@types/bull": "^3.15.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.11.0",
    "@types/express": "^4.17.11",
    "@types/jest": "26.0.20",
    "@types/node": "^14.14.25",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "26.5.0",
    "ts-loader": "^8.0.15",
    "ts-node": "9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3",
    "webpack-node-externals": "^2.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@auth/(.*)": "<rootDir>/microservices/auth/$1",
      "@booking/(.*)": "<rootDir>/microservices/booking/$1",
      "@catalog/(.*)": "<rootDir>/microservices/catalog/$1",
      "@customer/(.*)": "<rootDir>/microservices/customer/$1",
      "@mail/(.*)": "<rootDir>/microservices/mail/$1",
      "@utils/(.*)": "<rootDir>/utils/$1",
      "@test/(.*)": "<rootDir>/../test/$1",
      "@security/(.*)": "<rootDir>/security/$1"
    }
  },
  "_moduleAliases": {
    "@infrastructure": "dist/item/infrastructure",
    "@auth": "dist/microservices/auth",
    "@booking": "dist/microservices/booking",
    "@catalog": "dist/microservices/catalog",
    "@customer": "dist/microservices/customer",
    "@mail": "dist/microservices/mail",
    "@utils": "dist/utils",
    "@security": "dist/security"
  }
}
