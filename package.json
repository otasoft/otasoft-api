{
  "name": "otasoft-api",
  "version": "0.1.0",
  "description": "API Gateway for Otasoft ecosystem",
  "author": "Jakub Andrzejewski",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.4",
    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.6.4",
    "@nestjs/graphql": "^7.9.0",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/microservices": "^7.6.4",
    "@nestjs/passport": "^7.1.4",
    "@nestjs/platform-express": "^7.6.4",
    "@nestjs/schedule": "^0.4.1",
    "@nestjs/swagger": "^4.7.8",
    "@nestjs/terminus": "^7.0.1",
    "@types/cookie-parser": "^1.4.2",
    "amqp-connection-manager": "^3.2.0",
    "amqplib": "^0.6.0",
    "apollo-server-express": "^2.19.1",
    "cache-manager": "^3.4.0",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "compression": "^1.7.4",
    "connect-redis": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "express-rate-limit": "^5.2.3",
    "express-session": "^1.17.1",
    "graphql": "^15.4.0",
    "graphql-tools": "^7.0.2",
    "helmet": "^4.2.0",
    "openid-client": "^4.2.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.5",
    "@nestjs/testing": "^7.6.4",
    "@types/express": "^4.17.9",
    "@types/jest": "26.0.19",
    "@types/node": "^14.14.16",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1",
    "ts-jest": "26.4.4",
    "ts-loader": "^8.0.12",
    "ts-node": "9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
